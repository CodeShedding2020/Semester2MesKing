@model IEnumerable<Messenger_Kings.Models.Order>

@{
    ViewBag.Title = "DeliveryList";
}

<h2>My Delivery List</h2>

<hr/>
<br/>
<div class="row">

    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <div class="shadow p-3 mb-5 bg-white rounded">

                <p>Client Name: @Html.DisplayFor(modelItem => item.Bookings.Client.Client_Name)</p>
                <p>Item(s) description: @Html.DisplayFor(modelItem => item.Bookings.Quote.Quote_Description)</p>

                <p>Pick-up date: @Html.DisplayFor(modelItem => item.Bookings.Book_PickupDate)</p>
                <a href='@Url.Action("Edit", "Trackings", new { id = item.Order_ID }, null)' class="btn btn-success">Select</a>
                
            </div>
        </div>
    }
</div>
